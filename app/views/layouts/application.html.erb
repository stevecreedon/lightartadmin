<!DOCTYPE html>
<html>
<head>
  <title>Lightartadmin</title>

  <%= stylesheet_link_tag "blueprint/screen.css", :media => "screen, projection" %>
  <%= stylesheet_link_tag "blueprint/print.css", :media => "print" %>

<!--[if lt IE 8]>
  <%= stylesheet_link_tag "blueprint/screen.css", :media => "screen, projection" %>
<![endif]--></code></pre>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery.blockUI' %>
  <%= csrf_meta_tag %>
</head>
<body>
	
<div id="authentication">
	<%= render :partial => 'layouts/sign_in' unless user_signed_in? %>
	<%= render :partial => 'layouts/sign_out' if user_signed_in? %>
</div>	

<div id="navigation">
	<h1>Light Art Costs</h1>
	<ul>
		<li><%= link_to 'home', root_path %></li> |
		<li><%= link_to 'costs', costs_path %></li> |
		<li><%= link_to 'cost centres', cost_centres_path %></li> |
		<li><%= link_to 'projects', projects_path %></li> |
		<li><%= link_to 'cost types', cost_types_path %></li> |
		<li><%= link_to 'payment methods', payment_methods_path %></li> |
		<li><%= link_to 'companies', companies_path %></li> |
		<li><%= link_to 'contacts', contacts_path %></li>
	</ul>	
</div>	
<h1 class="page_title"><%= page_title %></h1>
<div class="<%= container %>">
 <%= yield %>
</div>

<% if notice %>
 <div id="growl">
	<ul class="growl-list"><li><%= raw growlify(flash[:notice]) %></li></ul>
 </div>
<% end %>

</body>
</html>
