<%= semantic_form_for(@cost) do |f| %>
      <% f.inputs do %>    
    	<%= f.input :amount %>&nbsp;
    	<%= f.input :vat_inclusive, :as => :select, :collection => vat_inclusives, :label => 'excludes/plus VAT' %>
    	<%= f.input :vat, :as => :select, :collection => vats, :label => 'VAT at' %>

    	<%= f.input :description, :as => :text%>
	    <%= f.input :reference %>

	    <%= f.input :payment_date %>
	    <%= f.input :cost_centre, :as => :select, :collection => CostCentre.all, :include_blank => true %>
	    <%= f.input :project, :as => :select, :collection => Project.all, :include_blank => true %>

	    <%= f.input :user, :as => :select, :collection => User.all.collect{|user| [user.email, user.id]}, :include_blank => true %>
	    <%= f.input :payment_method, :as => :select, :collection => PaymentMethod.all, :include_blank => true %>
	    <%= f.input :cost_type, :as => :select, :collection => CostType.all, :include_blank => true %>
	    <%= f.input :company, :as => :select, :collection => Company.all, :include_blank => true %>
	    <%= f.input :contact, :as => :select, :collection =>  Contact.all, :include_blank => true %>
    <% end %>
    <%= f.buttons %>
<% end %>
