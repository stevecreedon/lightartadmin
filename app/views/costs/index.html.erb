<h1>Listing costs</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Vat</th>
    <th>Description</th>
    <th>Reference</th>
    <th>Payment date</th>
    <th>Cost centre</th>
    <th>Payer</th>
    <th>Payment type</th>
    <th>Cost type</th>
    <th>Company</th>
    <th>Contact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @costs.each do |cost| %>
  <tr>
    <td><%= cost.amount %></td>
    <td><%= cost.vat %></td>
    <td><%= cost.description %></td>
    <td><%= cost.reference %></td>
    <td><%= cost.payment_date %></td>
    <td><%= cost.cost_centre_id %></td>
    <td><%= cost.payer_id %></td>
    <td><%= cost.payment_type_id %></td>
    <td><%= cost.cost_type_id %></td>
    <td><%= cost.company_id %></td>
    <td><%= cost.contact_id %></td>
    <td><%= link_to 'Show', cost %></td>
    <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
    <td><%= link_to 'Destroy', cost, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

